@using GuiaNet.Models;
@{
    ViewBag.Title = "Index";
    Guia db = new Guia();
    sessionreferenceheterogeneouscategories ind = (sessionreferenceheterogeneouscategories)Session["sessionreferenceheterogeneouscategories"];
    int ClientIdss, EditionIds, BookIds, CountryIdss;
    if (ind != null)
