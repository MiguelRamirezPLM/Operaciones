<html>
<head>
    <title></title>
    @*CHARGE DIVISIONS BY COUNTRY*@
    <script type="text/javascript">
        $(document).ready(function () {
            $("#division").hide();
            $("#pais").change(function () {
                var idcountry = $(this).val();
                var nulls = $(".null").val();
                var coun = idcountry;
                document.getElementById("CountryId").value = coun;
                if (idcountry != nulls) {
                    coun = (idcountry);
                    $("#bookn").show();
                    $("#lblbook").show();
                    $("#lblbook1").show();

                }
                else if (idcountry == nulls) {
                    $("#bookn").show();
                    $("#lblbook").show();
                    $("#division").hide();
                    $("#lblclient").hide();
                    $("#Edition").hide();
                    $("#lblEdition").hide();
                    $("#InsertProducts").hide();
                }
                $.ajax({
                    type: "POST",
                    dataType: "json",
                    url: "../SalesModule/books/",
                    traditional: true,
                    data: { country: idcountry },
                    success: function (data) {
                        $('#bookn').empty();
                        $('#bookn')
                           .append($("<option></option>")
                           .attr("value", 0)
                           .text("Seleccione..."));
                        $.each(data, function (index, val) {
                            $('#bookn')
                            .append($("<option></option>")
                            .attr("value", val.BookId)
                            .text(val.BookName));
                        });
                    }
                });
            })
        })
    </script>
    @*END*@

    @*CHARGE EDITION BY BOOK*@
    <script type="text/javascript">
        $(document).ready(function () {
            $("#InsertProducts").hide();
            $("#bookn").change(function () {
                var idbook = $(this).val();
                var idcountry = $("#pais").val();
                var nulls = $(".null").val();
                var book = $("#bookn").val();

                var coun = idbook;
                document.getElementById("BookId").value = coun;
                if (idcountry != nulls) {
                    $("#Edition").show();
                    $("#lblEdition").show();
                    $("#lblEdition1").show();
                    $("#InsertProducts").hide();
                }
                else if (idcountry == nulls) {
                    $("#Edition").hide();
                    $("#lblEdition").hide();
                    $("#InsertProducts").hide();
                }
                $.ajax({
                    type: "POST",
                    dataType: "json",
                    url: "../SalesModule/editions/",
                    traditional: true,
                    data: { country: idcountry, bookid: book },
                    success: function (data) {
                        $('#Edition').empty();
                        $('#Edition')
                            .append($("<option></option>")
                            .attr("value", 0)
                            .text("Seleccione..."));
                        $.each(data, function (index, val) {
                            $('#Edition')
                            .append($("<option></option>")
                            .attr("value", val.EditionId)
                            .text(val.NumberEdition));
                        });
                    }
                });
            })
        })
    </script>
    @*END*@
    @*CHARGE DIVISION BY BOOK*@
    <script type="text/javascript">
        $(document).ready(function () {
            $("#InsertProducts").hide();
