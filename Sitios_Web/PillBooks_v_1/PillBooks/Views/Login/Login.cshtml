@model PillBooks.Models.Users
@using PillBooks.Models;
@{
    ViewBag.Title = "Login";
}

<img src="@Url.Content("~/Images/PLM-LogotipoAzul.png")" style="float:right; width:18%; height:8%;" />
<div style="border:none; height:100px">
</div>
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div class="container" style="border:none; vertical-align:middle">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel-login">
                    <div class="panel-heading" style="background-color: #065977; border: #373b3a; border-radius: 5px;">
                        <div class="row">
                            <div style="text-align: center;">
                                <label style="font-style: italic;font-family:'Times New Roman'; font-size: 25px; text-align: center; border: none;color: #fff;">Iniciar Sesión</label>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body" style="background-color: #eff2f4">
                        <div class="row">
                            <div class="col-lg-12">
                                <p style="text-align:center">@Html.ValidationSummary(true)</p>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.NickName, new { @class = "form-control", placeholder = "Usuario" })
                                    @Html.ValidationMessageFor(m => m.NickName)
                                    <br />
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Contraseña" })
                                    @Html.ValidationMessageFor(m => m.Password)
                                    <br />
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="login-submit" id="login-submit" onclick="show_loader()" tabindex="4" class="form-control1 btn btn-login" style="background-color: #065b78;" value="Log In">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}




