@using PillBooks.Models;
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PillBook</title>
    
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Site.css")

    <script type="text/javascript" src="@Url.Content("~/Scripts/apprise-1.5.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/main.js")"></script>
    <link rel="stylesheet" href="~/Content/apprise.min.css" type="text/css" />

    <link rel="stylesheet" href="~/Content/bootstrap.css" type="text/css" />



    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")"></script>


    
    <script>
        $(function () {
            $(".ldr").click(function () {
                $("#bloqueo").show();
            })
        })
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".treeview li>ul").css('display', 'none');
            $(".collapsible").click(function (e) {
                e.preventDefault();
                $(this).toggleClass("collapse1 expand1");
                $(this).closest('li').children('ul').slideToggle();
            });
        });
    </script>
</head>
<body style="background-color: #d6d6d6; ">
    <div class="pantalla_bloqueo" id="bloqueo">
        <div id="mensaje_bloqueador">
            <h3 style="color:#0d468f">  CARGANDO... </h3>
        </div>
        <div id="imagen_bloqueador">
            <img src="~/Images/301.GIF" style="">
        </div>
    </div>

    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #065977; ">
        @{
            if (Request.IsAuthenticated)
            {
                <img src="~/Images/PLM-LogotipoBlanco.png" style="width:190px; height:60px;float:left" />
                        <div class="container">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                @*@Html.ActionLink("Nombre de aplicación", "Index", "Home", null, new { @class = "navbar-brand" })*@                        
                            </div>
                            <div class="navbar-collapse collapse" style="color:white;text-align:center">
                                <div class="btn-group" style="width: 50%; text-align: center; border: none; ">
                                    <div class="btn-group" style="width: 33.33%; border: none; ">
                                        <br />
                                      <p> <button class="btn ldr" style="border-radius: 10px; color: white; background-color: white; color: #065977;" onclick="location.href='@Url.Action("Index", "PillBook")';return false;"><b>PILLBOOKS</b></button>
                                    </div>
                                    <div class="btn-group" style="width: 33.33%; border: none; ">
                                        <br />
                                        <button class="btn ldr" style="border-radius: 10px; color: white; background-color: white; color: #065977;" onclick="location.href='@Url.Action("Index", "Substances")';return false;"><b>SUSTANCIAS</b></button>
                                    </div>
                                    <div class="btn-group" style="width: 33.33%; border: none; ">
                                        <br />
                                
                                    </div>
                                </div>
                                @Html.Partial("_LoginPartial")
                            </div>
                        </div>
           }
        }
    </div>
    @Scripts.Render("~/bundles/jquery")
    <div class="container body-content">
        @RenderBody()
        <footer style="position: fixed; bottom: 0; background-color: #d6d6d6; width: 100%; height: 20px; ">
            <p class="labelwhite" style="text-align:center">&copy; @DateTime.Now.Year - PLM - MÉXICO</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
