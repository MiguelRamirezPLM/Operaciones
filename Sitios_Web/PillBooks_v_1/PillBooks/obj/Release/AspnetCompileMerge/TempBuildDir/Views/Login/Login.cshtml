@model PillBooks.Models.Users
           @using PillBooks.Models;
@{
    ViewBag.Title = "Login";
}
<img src="/Images/PLM-LogotipoAzul.png" style="float:right; width:18%; height:8%;" />
<div style="border:none; height:100px">
</div>

<div class="container" style="border:none; vertical-align:middle">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading" style="background-image: url(/Images/fondo.jpg); border-radius:5px">
                    <div class="row">
                        <div  style="text-align: center;">
                            <label style="font-style: italic;font-family:'Times New Roman'; font-size: 25px; text-align: center; border: none;color: #fff;">Iniciar Sesión</label>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <p style="text-align:center">@Html.ValidationSummary(true)</p>
                            <form id="login-form" action="/Login/Log" method="post" role="form" style="display: block;">
                                <div class="form-group">
                                    @*<input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Username" value="">*@
                                    @Html.TextBoxFor(m => m.NickName, new { @class = "form-control", placeholder = "Usuario" })
                                    @Html.ValidationMessageFor(m => m.NickName)
                                    <br />
                                </div>
                                <div class="form-group">
                                    @*<input type="password" name="password" id="password" tabindex="2" class="form-focus" placeholder="Password">*@
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Contraseña" })
                                    @Html.ValidationMessageFor(m => m.Password)
                                    <br />
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



