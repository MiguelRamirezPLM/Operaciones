</ol>

<div class="row">
    <div class="col-lg-6">
        <table border="0" class="widthtable">
            <tr>
                <td colspan="3">
                    @using (Html.BeginForm())
                    {
                        <div style="text-align:right;display:none">
                            <p>
                                @{
                        if (ind != null)
                        {
                            <label>country</label><input id="CountryId" name="CountryId" type="text" value="@ind.CountryId" style="width:30px">
