<script>
    function ShowFormAddPDF(item) {
        $('#DivAddHTMLFile').show();
        $(item).hide();
    }

    function HideFormAddPDF(item) {

        var tr = $(item).parents("tr:first");

        $('#DivAddHTMLFile').hide();
        tr.find("#btnShowFormAddPDF").show();

        tr.find("#txtFileName").val('');
    }

    
</script>