                    <tr>
                        <td colspan="2">
                            <br />
                        </td>
                    </tr>
                    <tr>
                        <td style="width:25%; font-size:14px">
                            <label class="labelsform">País: </label>
                        </td>
                        <td style="width: 75%; font-size: 14px">
                            <select class="form-control" id="SelectCountryIP" onchange="GetStatesByCountry($(this).val())">
