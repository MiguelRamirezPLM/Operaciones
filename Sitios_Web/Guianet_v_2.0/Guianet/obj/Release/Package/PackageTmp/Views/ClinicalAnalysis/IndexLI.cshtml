        }
    }
    else
    {
        ClientIdss = 0;
        EditionIds = 0;
        BookIds = 0;
        CountryIdss = 0;
        S_0 = false;
        S_1 = false;
        S_2 = false;
        S_3 = false;
        S_4 = false;
