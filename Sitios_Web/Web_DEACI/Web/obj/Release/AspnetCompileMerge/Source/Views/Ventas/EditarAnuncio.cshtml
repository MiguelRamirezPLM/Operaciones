@model Web.Models.EditionCompanySectionAdvers
@{
    Layout = null;
}
<script>
    $(document).ready(function () {
        $("._ModificarAnuncio").click(function () {
            var _EditionCompanySectionAdverIdModify = $("#_EditionCompanySectionAdverIdModify").val();
            var _AdverFileModify = $("#_AdverFileModify").val();
            var _BaseURLModify = $("#_BaseURLModify").val();
            var _CompanyIdModify = $("#_CompanyIdModify").val();
            var _EditionIdModify = $("#_EditionIdModify").val();
            var _SectionIdModify = $("#_SectionIdModify").val();
            var _HiredSpaceModify = $("#_HiredSpaceModify").val();
            if (_HiredSpaceModify.trim() == false) {
                swal("¡Atención!", "¡El campo 'Espacio contratado' no puede quedar vacio!", "error");
            }
            else {
                $.ajax({
                    type: "POST",
                    dataType: "json",
                    url: "/Ventas/ModificarAnuncio",
                    traditional: true,
                    data: { EditionCompanySectionAdverId: _EditionCompanySectionAdverIdModify, EditionId: _EditionIdModify, CompanyId: _CompanyIdModify, SectionId: _SectionIdModify, AdverFile: _AdverFileModify, BaseURL: _BaseURLModify, HiredSpace: _HiredSpaceModify },
                    success: function (data) {
                        if (data == true) {
                            swal("¡Cambios guardados!", "", "success")
                            setTimeout(function () { location.reload(1); }, 300);
                        }
                    }
                });
            }
        });
    });
</script>
<script src="~/Bootstrap/js/JavaScript1.js"></script>
<link href="~/Styles/sweetalert.css" rel="stylesheet" />
<script src="~/Scripts/sweetalert.min.js"></script>
