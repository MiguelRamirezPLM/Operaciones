    if (S != null)
    {
        ClientIdss = Convert.ToInt32(S.DDivisionId);
        EditionIds = Convert.ToInt32(S.EditId);
        BookIds = Convert.ToInt32(S.BbookId);
        CountryIdss = Convert.ToInt32(S.CountId);
    }
    else
    {
