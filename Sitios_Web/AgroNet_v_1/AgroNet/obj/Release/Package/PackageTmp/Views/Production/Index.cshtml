                            type: "POST",
                            dataType: "json",
                            url: "../Production/Pages/",
                            traditional: true,
                            data: { PharmaForm: pharmaf, ProductId: prodId, Category: catid, Page: page, DivisionId: Division },
                            success: function (data) {
                            }
                        });
                    }
                });

            });
        });
    </script>
